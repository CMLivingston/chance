<% if !user_signed_in? %>
	<%= render 'layouts/banner' %>
<% else %>
	<div class="row">
		<div class="col-xs-8">
			<div class="panel panel-default">
				<div class="panel-body">
					<p>Watchlist</p>
				</div>
				<% for @u in @following %>
					<div class="panel-body">
						<p><%= @u.email %></p>
					</div>
				<% end %>
			</div>
		</div>
		<div class="col-xs-4">
			<div class="panel panel-default">
				<div class="panel-body">
					<p>Matches</p>
				</div>
				<% for @m in @matches %>
					<div class="panel-body">
						<p><%= @m.user_id %></p>
					</div>
				<% end %>
			</div>
		</div>
	</div>
<% end %>